<!DOCTYPE html>
<html>
<head>
  <title><%= hospital.name %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1><%= hospital.name %></h1>
  <p><%= hospital.description %></p>
  <p><strong>Location:</strong> <%= hospital.location %></p>
  <p><strong>Specialties:</strong> <%= hospital.specialties.join(", ") %></p>

  <h2>Doctors Working Here</h2>
  <% if (doctors.length > 0) { %>
    <ul>
      <% doctors.forEach(doc => { %>
        <li><a href="/doctors/<%= doc._id %>"><%= doc.name %></a> — <%= doc.specialization %></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No doctors listed yet.</p>
  <% } %>

  <a href="/hospitals">← Back to Hospitals</a>
</body>
</html>
