<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      background: #f8f9fa;
    }

    h1, h2 {
      color: #333;
    }

    a.logout {
      float: right;
      color: white;
      background: #dc3545;
      padding: 6px 12px;
      border-radius: 6px;
      text-decoration: none;
    }

    a.logout:hover {
      background: #b52b3a;
    }

    form {
      background: #fff;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 40px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    input, select, button, textarea {
      display: block;
      width: 100%;
      margin-bottom: 10px;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 16px;
    }

    button {
      background: #007bff;
      color: white;
      cursor: pointer;
      border: none;
      font-weight: bold;
      transition: background 0.3s;
    }

    button:hover {
      background: #0056b3;
    }

    .section {
      margin-bottom: 60px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ccc;
      text-align: left;
    }

    th {
      background: #007bff;
      color: white;
    }

    td img {
      width: 80px;
      height: 60px;
      object-fit: cover;
      border-radius: 4px;
    }
  </style>
</head>

<body>
  <h1>Admin Dashboard</h1>
  <a href="/logout" class="logout">Logout</a>
  <hr />

  <!-- ========================== -->
  <!-- ADD HOSPITAL SECTION -->
  <!-- ========================== -->
  <div class="section">
    <h2>Add New Hospital</h2>
    <form action="/admin/add-hospital" method="POST">
      <input type="text" name="name" placeholder="Hospital Name" required />
      <input type="text" name="location" placeholder="Location" required />
      <textarea name="description" placeholder="Description" rows="3"></textarea>
      <input type="text" name="specialties" placeholder="Specialties (comma-separated)" />
      <input type="text" name="phone" placeholder="Phone" />
      <input type="email" name="email" placeholder="Email" />
      <input type="text" name="imageUrl" placeholder="Image URL" />
      <button type="submit">Add Hospital</button>
    </form>

    <h3>Existing Hospitals</h3>
    <table>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th>Location</th>
          <th>Specialties</th>
        </tr>
      </thead>
      <tbody>
        <% hospitals.forEach(h => { %>
          <tr>
            <td><img src="<%= h.imageUrl %>" alt="<%= h.name %>"></td>
            <td><%= h.name %></td>
            <td><%= h.location %></td>
            <td><%= h.specialties.join(", ") %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- ========================== -->
  <!-- ADD DOCTOR SECTION -->
  <!-- ========================== -->
  <div class="section">
    <h2>Add New Doctor</h2>
    <form action="/admin/add-doctor" method="POST">
      <input type="text" name="name" placeholder="Doctor Name" required />
      <input type="text" name="specialization" placeholder="Specialization" required />

      <label for="hospital">Select Hospital:</label>
      <select name="hospital" required>
        <% hospitals.forEach(h => { %>
          <option value="<%= h._id %>"><%= h.name %></option>
        <% }) %>
      </select>

      <input type="text" name="experience" placeholder="Experience (e.g., 10 years)" required />
      <input type="text" name="contact" placeholder="Contact (phone/email)" required />
      <input type="text" name="imageUrl" placeholder="Image URL" />
      <button type="submit">Add Doctor</button>
    </form>

    <h3>Existing Doctors</h3>
    <table>
      <thead>
        <tr>
          <th>Photo</th>
          <th>Name</th>
          <th>Specialization</th>
          <th>Hospital</th>
        </tr>
      </thead>
      <tbody>
        <% doctors.forEach(d => { %>
          <tr>
            <td><img src="<%= d.imageUrl %>" alt="<%= d.name %>"></td>
            <td><%= d.name %></td>
            <td><%= d.specialization %></td>
            <td>
              <% if (d.hospital && d.hospital.name) { %>
                <%= d.hospital.name %>
              <% } else { %>
                Unknown
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
